<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Base.App.Theme.Light" parent="@style/Theme.AppCompat.Light">

    </style>
    <!-- 日间模式 -->
    <style name="App.Theme.Light" parent="Base.App.Theme.Light" />

    <style name="Base.App.Theme.NoTitle" parent="App.Theme.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Account_Base.App.Theme.NoTitle" parent="Base.App.Theme.NoTitle">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="drop_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawableRight">@mipmap/pull_down</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">28sp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="dropDownAnim" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/dropdown_unfold</item>
        <item name="android:windowExitAnimation">@anim/dropdown_retract</item>
    </style>

    <!--水平装饰线-->
    <style name="horizontal_decoration_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#999999</item>
    </style>
    <!--竖直装饰线-->
    <style name="vertical_decoration_style">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#999999</item>
    </style>

</resources>
